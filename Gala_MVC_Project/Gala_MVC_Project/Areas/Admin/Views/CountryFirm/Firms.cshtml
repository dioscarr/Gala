@model Gala_MVC_Project.Areas.Admin.Models.FirmModel

@{
    ViewBag.Title = "Firms";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="container-fluid">



    <div class="row outer-Box" style=" margin-top:20px; padding-bottom:0!important;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Step <span class="badge ">1</span> <span class="label label-primary"> Select a Coountry </span> </div>
                <div class="panel-body">
                    <div class="form-group " style="  padding-bottom:0!important;">

                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].FirmName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].City)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].State)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].Zip)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].Tel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].Fax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].web)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Firms[0].AboutContent)
                                </th>
                                
                                <th></th>
                            </tr>

                            @foreach (var item in Model.Firms)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirmName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zip)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tel)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.web)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AboutContent)
                                    </td>
                                    
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>