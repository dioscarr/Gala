<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <div id="wrapper2">
            <section class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-9 col-sm-3 col-sm-offset-9 col-xs-12 user_data">
                            <div class="user_icon pull-left">
                                <a href="#"><img src="~/Images/user_icon.png" /></a>
                            </div>
                            <div class="user_login pull-left">
                                <h2>member login</h2>
                            </div>
                        </div>
                    </div>

                    <div class="row logo_and_search">
                        <div class="col-sm-4 col-xs-8 logo">
                            <a href="~/home"><img src="~/Images/logo.png" /></a>
                        </div>
                        <nav class="visible-xs col-xs-12 header_menu navbar navbar-default menu">
                            <div class="container">
                                <!-- Brand and toggle get grouped for better mobile display -->
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <!-- Collect the nav links, forms, and other content for toggling -->
                                <div class="collapse navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                                    <ul class="menu nav nav_bar_menu">
                                        <li role="presentation"><a href="~/about/about">about us</a></li>
                                        <li role="presentation"><a href="~/members/MemberList">members</a></li>
                                        <li role="presentation"><a href="~/events/EventList">events</a></li>
                                        <li role="presentation"><a href="~/news/NewList">news & press</a></li>
                                        <li role="presentation"><a href="~/Publication/publication">publications</a></li>
                                        <li role="presentation"><a href="~/contact/contact">contact us</a></li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                        <div class="col-sm-4 col-sm-offset-4 col-xs-12 search_block">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search the entire site...">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    </div>
            </section>

            <nav class="visible-lg visible-md visible-sm header_menu navbar navbar-default menu">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                        <ul class="menu nav nav_bar_menu">
                            <li role="presentation"><a href="~/about/about">about us</a></li>
                            <li role="presentation"><a href="~/members/MemberList">members</a></li>
                            <li role="presentation"><a href="~/events/EventList">events</a></li>
                            <li role="presentation"><a href="~/news/NewList">news & press</a></li>
                            <li role="presentation"><a href="~/Publication/publication">publications</a></li>
                            <li role="presentation"><a href="~/contact/contact">contact us</a></li>
                        </ul>
                    </div>
                </div>
            </nav>


